@page "/login"
@using Microsoft.AspNetCore.WebUtilities
@inject IConfiguration config
@inject HttpClient Http
<PageTitle>Login</PageTitle>


<style>
    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        padding: 20px;
        box-sizing: border-box;
    }

    .login-box {
        display: flex;
        flex-direction: column;
        width: 100%;
        max-width: 600px; 
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        overflow: hidden;
        background-color: #fff;
    }

    .form-container {
        padding: 40px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
    }

    .form-container h2 {
        margin-bottom: 20px;
        color: #5D3A6E;
    }

    .form-container h4 {
        margin-top: 20px;
        color: #333;
        font-size: 18px;
    }

    .btn-google {
        border: 1px solid rgba(0, 0, 0, 0.5);
        border-radius: 5px;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 10px 20px;
        font-size: 16px;
        background-color: #fff;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn-google:hover {
        background-color: #f5f5f5;
    }

    .btn-google img {
        margin-right: 10px;
    }

    .form-container .fpt-logo {
        max-width: 100%;
        height: auto;
        margin-top: 20px;
    }


    @@media (max-width: 768px) {
        .login-box {
            flex-direction: column;
            padding: 20px;
        }

        .form-container {
            padding: 20px;
            width: 100%;
        }

        .form-container h4 {
            font-size: 16px; 
        }

        .btn-google {
            padding: 12px 30px;
        }
    }

    @@media (max-width: 480px) {
        .form-container h2 {
            font-size: 24px; 
            margin-bottom: 10px;
        }

        .form-container h4 {
            font-size: 14px; 
        }

        .btn-google {
            width: 100%; 
            font-size: 14px;
        }

        .form-container img {
            max-width: 150px;
        }
    }
</style>

<div class="container">
    <div class="login-box">
        <div class="form-container">
            <h2>Exam Review System</h2>
            <img class="fpt-logo" src="/image/logo.png" alt="Logo" />

            <h4>Single sign on with email @@fpt.edu.vn</h4>

            <button class="btn-google" @onclick="SignInWithGoogle">
                <img src="https://developers.google.com/identity/images/g-logo.png" alt="Google Logo" width="20" height="20" />
                Sign in with Google
            </button>
        </div>
    </div>
</div>

@code {
    public UserRequest accountRequest = new UserRequest();
    private bool _processing = false;
    protected override async Task OnInitializedAsync()
    {
        var isAuthenticated = await CustomAuthStateProvider.IsUserAuthenticated();

        if (isAuthenticated)
        {
            NavManager.NavigateTo("/home");
        }
    }

    private async Task SignInWithGoogle()
    {

        var clientId = await GetKeys();
        // Điều hướng người dùng đến trang đăng nhập Google
        var redirectUrl = $@"https://accounts.google.com/o/oauth2/v2/auth?client_id={clientId.ClientId}&redirect_uri={config["BaseUri"]}api/user/googlelogincallback&response_type=code&scope=openid%20profile%20email";
        NavManager.NavigateTo(redirectUrl, true);
    }

    private async Task<GoogleKeys> GetKeys()
    {

        var text = config["BaseUri"];
        var response = await Http.GetFromJsonAsync<GoogleKeys>($"{config["BaseUri"]}api/User/google-keys");

        return response;
    }

    private class GoogleKeys
    {
        public string ClientId { get; set; }
    }
}
