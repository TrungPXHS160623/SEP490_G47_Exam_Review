<MudDialog @bind-IsOpen="@showLecturerDialog">
    <DialogContent>
        <MudTable Items="LectureList" Hover="true" MultiSelection="true" SelectOnRowClick>
            <HeaderContent>
                <MudTh>Lecture Name</MudTh>
                <MudTh>Email</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd>@context.Email</MudTd>
                <MudTd>@context.UserName</MudTd>
            </RowTemplate>
        </MudTable>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="ConfirmSelection">Confirm</MudButton>
        <MudButton OnClick="CloseLecturerDialog">Cancel</MudButton>
    </DialogActions>
</MudDialog>

@code {

    private List<UserResponse> LectureList = new List<UserResponse>();

    private bool showLecturerDialog;
    private void OpenLecturerDialog() => showLecturerDialog = true;
    private void CloseLecturerDialog() => showLecturerDialog = false;

    private void ConfirmSelection()
    {
        // Cập nhật danh sách giảng viên đã chọn vào dialog chính
        CloseLecturerDialog();
    }
}
